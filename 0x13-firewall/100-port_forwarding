#!/bin/bash

# Step 1: Open the ufw configuration file
sudo nano /etc/ufw/before.rules

# Step 2: Add the NAT rule to redirect port 8080 to port 80
echo -e "*nat\n:PREROUTING ACCEPT [0:0]\n-A PREROUTING -p tcp --dport 8080 -j REDIRECT --to-port 80\nCOMMIT" | sudo tee -a /etc/ufw/before.rules

# Step 3: Save the changes and exit the text editor

# Step 4: Restart ufw to apply the changes
sudo ufw disable
sudo ufw enable

# Step 5: Display ufw status
sudo ufw status
